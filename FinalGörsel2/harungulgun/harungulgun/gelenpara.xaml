                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Rectangle Fill="#FF4C4CAA" Height="34.24" Margin="0,145.76,0,0" Stroke="Black" VerticalAlignment="Top"/>

    </Grid>
</Window>
