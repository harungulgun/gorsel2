<Window x:Class="harungulgun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:harungulgun"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF1D0A0A">
        <Rectangle Fill="#FF161619" Margin="10,24,10,10" Stroke="Black"/>
        <Label x:Name="label" Content="Kullanıcıa Adı:&#xA;" Margin="130,116,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBFBFBF" Height="26.92" HorizontalAlignment="Left" Width="85"/>
        <Label x:Name="label_Copy" Content="Parola:&#xA;" Margin="130,147.92,0,136.08" Background="{x:Null}" Foreground="#FFBFBFBF" HorizontalAlignment="Left" Width="85"/>
        <TextBox BorderBrush="Bisque" x:Name="kulad" HorizontalAlignment="Right" Height="23" Margin="0,116,62,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" ToolTip="Kullanıcı Adını Gir"/>
        <TextBox BorderBrush="Bisque" x:Name="parola" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" Width="195" ToolTip="Şifreni Gir" Margin="0,157,62,0" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Giriş Yap" Margin="0,0,87,79" VerticalAlignment="Bottom" Height="35" FontSize="20" HorizontalAlignment="Right" Width="130" Click="button_Click" FontStyle="Italic">
            <Button.CacheMode>
                <BitmapCache/>
            </Button.CacheMode>
            <Button.BindingGroup>
                <BindingGroup/>
            </Button.BindingGroup>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="label_Copy1" Content="Harun Muhasebe&#xD;&#xA;" Margin="100,30.294,41.98,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBFBFBF" Height="69.706" RenderTransformOrigin="0.5,0.5" FontFamily="Kunstler Script" FontSize="70">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.12"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Grid>
</Window>
